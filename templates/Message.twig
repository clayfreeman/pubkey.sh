{% macro message(msg, closable = false, type = null) %}
<div class="{% if type is not null %}uk-alert-{{ type|e }} {% endif %}uk-alert" data-uk-alert>
{% if closable %}
<a class="uk-alert-close uk-close" href></a>
{% endif %}
{% block messageText %}<p>{{ msg|e }}</p>{% endblock %}
</div>
{% endmacro %}
