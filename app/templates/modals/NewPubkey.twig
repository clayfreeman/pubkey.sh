{% extends "Modal.twig" %}
{% from 'Raw.twig' import rawInput %}

{% block modalID %}new-pubkey{% endblock %}
{% block buttonTitle %}New Key{% endblock %}
{% block title %}New Public Key{% endblock %}
{% block content %}
<form class='uk-form uk-form-horizontal'>
  <div class='uk-form-row'>
    <label class='uk-form-label' for='title'>Title</label>
    <div class='uk-form-controls'>
      <input id='title' class='courier uk-form-width-large' type='text'>
    </div>
  </div>
  <div class='uk-form-row'>
    <label class='uk-form-label' for='key-uri'>Key URI</label>
    <div class='uk-form-controls'>
      <input id='key-uri' class='courier uk-form-width-large' type='text' disabled>
    </div>
  </div>
  <div class='uk-form-row'>
    <label class='uk-form-label' for='key'>Key</label>
    <div class='uk-form-controls'>
      <textarea {{ rawInput() }} rows='12' id='key' class='courier raw-input uk-form-width-large' placeholder='ssh-rsa ...'></textarea>
    </div>
  </div>
</form>
<!-- var modal = new $.UIkit.modal.Modal('#new-public-key').hide(); -->
{% endblock %}
{% block footer %}<button type='button' class='uk-button uk-button-primary'>Save</button>{% endblock %}
