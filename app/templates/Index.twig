{% extends 'Page.twig' %}
{% from 'Message.twig' import message %}
{% block title %}Home{% endblock %}

{% block body %}
{% include 'Menu.twig' %}
<div class='uk-container uk-container-center uk-margin-top'>

  <!-- {% include 'modals/NewPubkey.twig' %}
  {{ block('newPubkeyButton') }} -->

{% if message is not null %}
{{ message(message, true) }}
{% endif %}

  <div class='uk-block uk-block-muted'>
    <h1 class='uk-text-center'>Provide remote support?</h1>
    <h2 class='uk-text-center'>Sharing your key has never been easier.</h2>
    <div class='hidden-data' style='display: none'>
      <span class='aqua-blue'>pubkey.sh</span> | SHA256:nXR8W5eDqQhz6Xf+9fsC0z04uPP5I2lGIiisyH94wfg<br/>
      <span class='aqua-blue'>pubkey.sh</span> | Install <span class='aqua-green'>tim</span>'s public key? [y/n]:
    </div>
    <div class='aqua-window-size'>
      <div class='aqua-window'>
        <div class='aqua-window-titlebar'>
          <div class='aqua-window-buttongroup'>
            <div class='aqua-window-button aqua-window-button-close'></div>
            <div class='aqua-window-button aqua-window-button-minimize'></div>
            <div class='aqua-window-button aqua-window-button-maximize'></div>
          </div>
          <span>&#x1F3E0;&nbsp;&nbsp;clay &mdash; bash</span>
        </div>
        <div class='aqua-window-content raw-input uk-height-1-1 uk-width-1-1'>
          <span class='aqua-bold aqua-green'>clay@mbp</span>:<span class='aqua-blue'>~</span>#&nbsp;<span class='typed'></span>
          <br />
        </div>
      </div>
    </div>
    <script type='text/javascript'>
      $('.typed').typed({
        strings:       ['curl https://pubkey.sh/tim/work | bash'],
        contentType:   'text',
        typeSpeed:     75,
        startDelay:    600,
        onStringTyped: function() {
          $('.typed').append('<br/>' + $('.hidden-data').html());
          $('.typed-cursor').css('-webkit-animation', '1s blink step-end infinite');
          $('.typed-cursor').css('-moz-animation', '1s blink step-end infinite');
          $('.typed-cursor').css('animation', '1s blink step-end infinite');
        }
      });
    </script>
  </div>
</div>
{% endblock %}
