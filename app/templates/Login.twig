{% extends 'Page.twig' %}
{% from 'Message.twig' import message %}
{% from 'Raw.twig' import rawInput %}
{% block title %}Login{% endblock %}

{% block body %}
<div class='uk-container uk-container-center uk-vertical-align uk-text-center uk-height-1-1'>
  <div class='uk-width-3-10 uk-vertical-align-middle'>
    <a href='/'><img class='uk-margin-bottom' src='/img/logo.svg' alt /></a>

{% if error is not null %}
{{ message(error, true, 'danger') }}
{% endif %}

    <form class='uk-panel uk-panel-box uk-form' method='POST'>

{% if message is not null %}
{{ message(message, false) }}
{% endif %}

      <div class='uk-form-row'>
        <input {{ rawInput() }} class='courier uk-form-large uk-width-1-1' name='username' placeholder='Username' type='text' />
      </div>
      <div class='uk-form-row'>
        <input {{ rawInput() }} class='courier uk-form-large uk-width-1-1' name='password' placeholder='Password' type='password' />
      </div>
      <div class='uk-form-row'>
        <button class='uk-width-1-1 uk-button uk-button-primary uk-button-large'>Login</button>
      </div>
      <div class='uk-form-row uk-text-small'>Lost Password?</div>
    </form>
  </div>
</div>
{% endblock %}
